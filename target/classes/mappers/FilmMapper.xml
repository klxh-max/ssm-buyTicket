<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.duyi.dao.FilmMapper">

    <!--`是转义字符  name是数据库的关键字  可以用转义字符改成普通颜色-->
    <select id="findAll" resultType="com.duyi.entity.Film">
        select id,film_id,fname,director,`role`,ftype,country,`length`,synopsis,release_time,poster_path
        from film
    </select>


    <select id="findFilmById" resultType="com.duyi.entity.Film">
        select id,film_id,fname,director,`role`,ftype,country,`length`,synopsis,release_time,poster_path
        from film
        where film_id = #{filmId}
    </select>
</mapper>